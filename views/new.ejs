<%- include('partials/header') %> 

<div class="ui main text container segment">

    <div class="ui huge header">New Post</div>

    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name=post[title] placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name=post[image] placeholder="Image URL">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="post[body]" id="" cols="30" rows="10" placeholder="Tell us what you are thinking..."></textarea>
        </div>
        <button class="ui button">Create Post</button>
    </form>

</div>

<%- include('partials/footer') %> 