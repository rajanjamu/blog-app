<h1>EDIT Page</h1>

<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <input type="text" name=post[title] placeholder="Title" value="<%= post.title %>">
    <input type="text" name=post[image] placeholder="Image URL" value="<%= post.image %>">
    <input type="text" name=post[body] placeholder="Body" value="<%= post.body %>">
    <button type="submit">Update Post</button>
</form>

<div><a href="/posts/<%= post._id %>">Back</a></div>