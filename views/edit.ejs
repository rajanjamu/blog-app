<%- include('partials/header') %>

<div class="ui main text container segment">

    <div class="ui huge header">Edit Post</div>

    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name=post[title] placeholder="Title" value="<%= post.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name=post[image] placeholder="Image URL" value="<%= post.image %>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="post[body]" id="" cols="30" rows="10" placeholder="Tell us what you are thinking..."><%= post.body %></textarea>
        </div>
        <button class="ui button">Update Post</button>
        <button class="ui right button"><i class="chevron left icon"></i>Back</button>
    </form>

</div>

<%- include('partials/footer') %> 