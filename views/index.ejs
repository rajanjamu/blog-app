<h1>INDEX Page</h1>

<div><a href="/posts/new">New Post</a></div>

<% posts.forEach(post => { %>
    <h2><%= post.title %></h2>
    <p><%= post.created %></p>
    <img src="<%= post.image %>" alt="">
    <p><%= post.body %></p>
    <a href="/posts/<%= post._id %>">More</a>
    <a href="/posts/<%= post._id %>/edit">Edit</a>

    <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
<% }) %> 